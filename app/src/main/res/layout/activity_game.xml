<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <Button
        android:id="@+id/game_settings"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/store"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="Store"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_settings" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="90"
        android:scaleX="1.8"
        android:scaleY="1.79"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/lives_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Lives Remaining: 10"
        android:textColor="#050505"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/enemy_spawn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="203dp"
        app:layout_constraintBottom_toTopOf="@+id/turn_1"
        app:layout_constraintEnd_toEndOf="@+id/turn_1"
        app:layout_constraintStart_toStartOf="@+id/turn_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turn_1"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="514dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enemy_spawn" />

    <TextView
        android:id="@+id/turn_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="242dp"
        android:layout_marginBottom="127dp"
        app:layout_constraintBottom_toTopOf="@+id/turn_3"
        app:layout_constraintEnd_toEndOf="@+id/turn_3"
        app:layout_constraintStart_toStartOf="@+id/turn_3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turn_3"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="149dp"
        android:layout_marginBottom="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turn_2" />

    <TextView
        android:id="@+id/turn_4"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="407dp"
        android:layout_marginBottom="181dp"
        app:layout_constraintBottom_toTopOf="@+id/turn_5"
        app:layout_constraintStart_toEndOf="@+id/turn_3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turn_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="129dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/turn_4"
        app:layout_constraintStart_toStartOf="@+id/turn_4"
        app:layout_constraintTop_toBottomOf="@+id/turn_4" />

    <TextView
        android:id="@+id/turn_6"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="626dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toTopOf="@+id/enemy_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/enemy_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/turn_6"
        app:layout_constraintStart_toStartOf="@+id/turn_6"
        app:layout_constraintTop_toBottomOf="@+id/turn_6" />

</androidx.constraintlayout.widget.ConstraintLayout>