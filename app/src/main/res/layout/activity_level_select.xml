<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/level_selection_header"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:text="Level Selection"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="132dp"
        android:layout_height="27dp"
        android:layout_marginBottom="20dp"
        android:text="Difficulty"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/difficulty_selection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/level_selection"
        android:layout_width="143dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:entries="@array/levels"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_selection_header" />

    <Spinner
        android:id="@+id/difficulty_selection"
        android:layout_width="139dp"
        android:layout_height="36dp"
        android:layout_marginTop="88dp"
        android:entries="@array/difficulties"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/level_selection"
        tools:layout_editor_absoluteX="134dp" />

    <Button
        android:id="@+id/level_start"
        android:layout_width="165dp"
        android:layout_height="74dp"
        android:layout_marginTop="144dp"
        android:text="Start Level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_selection" />

    <Button
        android:id="@+id/back_level_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>